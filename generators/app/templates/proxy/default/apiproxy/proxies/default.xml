<ProxyEndpoint name="default">
  <FaultRules>
    <FaultRule name="Generic Fault Handling">
      <Step>
        <Name>FlowCallout.common_faulthandling</Name>
      </Step>
    </FaultRule>
  </FaultRules>
  <DefaultFaultRule name="Default fault handling">
    <Step>
      <Name>Default-message</Name>
    </Step>
  </DefaultFaultRule>
  <PreFlow>
    <Request>
      <Step>
        <Name>FlowCallout.common_preflow_apikey</Name>
      </Step>
    </Request>
  </PreFlow>
  <Flows>
      <Flow name="templateFlow">
          <Description/>
          <Request>
          </Request>
          <Response/>
          <Condition>(proxy.pathsuffix MatchesPath "/*") and (request.verb = "POST")</Condition>
      </Flow>
  </Flows>
  <HTTPProxyConnection>
    <!-- Add a base path to the proxy to distinguish from others in the environment -->
    <BasePath></BasePath>
    <!-- Listen on both HTTP and HTTPS endpoints -->
    <VirtualHost>default</VirtualHost>
    <VirtualHost>secure</VirtualHost>
  </HTTPProxyConnection>
  <RouteRule name="default">
    <!-- This connects our proxy to the target defined elsewhere -->
    <TargetEndpoint>default</TargetEndpoint>
  </RouteRule>
</ProxyEndpoint>
